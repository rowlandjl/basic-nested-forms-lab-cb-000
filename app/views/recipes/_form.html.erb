<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  
  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name %>
    <%= ingr.text_field :name, html: { id: :recipe_ingredients_attributes_0_name } %><br>
    
    <%= ingr.label :quantity %>
    <%= ingr.text_field :quantity %><br>
  <% end %>
  
  <%= f.submit %>
<% end %>